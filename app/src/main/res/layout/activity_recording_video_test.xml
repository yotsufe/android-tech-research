<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RecordingVideoTestActivity">

        <TextView
            android:id="@+id/rec_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Rec1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.2" />

        <ImageView
            android:id="@+id/btn_rec_controller_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.4"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_rec_stop_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_stop_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.6"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/rec_time_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0:00"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.8" />

        <TextView
            android:id="@+id/rec_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Rec2"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.2" />

        <ImageView
            android:id="@+id/btn_rec_controller_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.4"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_rec_stop_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_stop_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.6"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/rec_time_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0:00"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.8" />

        <Button
            android:id="@+id/btn_count_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0.3" />

        <TextView
            android:id="@+id/count"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0.7" />

        <Button
            android:id="@+id/btn_stitching"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Video Stitching"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
